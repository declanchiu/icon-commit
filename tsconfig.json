{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}